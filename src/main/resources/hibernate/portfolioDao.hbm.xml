<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>

	<class name="io.craigmiller160.stockmarket.model.SQLPortfolioModel" table="portfolio">
		<id name="userID" column="userid">
			<generator class="native"/>
		</id>
		<property name="portfolioName" column="portfolio_name" type="string"/>
		<property name="cashBalance" column="cash_balance" type="double"/>
		<property name="initialValue" column="initial_value" type="double"/>
		<property name="totalStockValue" column="total_stock_value" type="double"/>
	</class>
	<class name="io.craigmiller160.stockmarket.model.SQLPortfolioModel" table="stocks">
		<id column="do_not_use_this_key">
			<generator class="native"/>
		</id>
	</class>
	

</hibernate-mapping>